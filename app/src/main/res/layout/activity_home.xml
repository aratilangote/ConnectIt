<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar"
            android:elevation="5dp"
            android:background="@drawable/connectit_appbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/home_group"
                    android:scaleType="fitXY"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_second"
                    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
                    <View
                        android:layout_width="60dp"
                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/bg_home"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_marginTop="25dp">

                        <!-- Image Slider -->
                        <androidx.viewpager2.widget.ViewPager2
                            android:layout_width="match_parent"
                            android:layout_marginTop="20dp"
                            android:id="@+id/view_pager"
                            android:layout_height="120dp"
                            android:layout_marginEnd="9dp"
                            android:layout_marginStart="9dp"
                            />


                        <!-- Grid view -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginTop="15dp"
                            android:fitsSystemWindows="true"
                            android:layout_marginHorizontal="8dp"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_gravity="center">
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/btn_premium"
                                    android:layout_width="105dp"
                                    android:layout_height="130dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardBackgroundColor="@color/purple_200"
                                    android:padding="1dp">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center">

                                        <ImageView
                                            android:id="@+id/img_premium"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/premium" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/img_premium"
                                            android:layout_centerInParent="true"
                                            android:layout_marginHorizontal="2dp"
                                            android:text="Upgrade to Premium"
                                            android:textAlignment="center"
                                            android:textColor="@color/black"
                                            android:textSize="15sp" />
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/btn_network_sms"
                                    android:layout_width="105dp"
                                    android:layout_height="130dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardBackgroundColor="@color/purple_200"
                                    android:padding="1dp"
                                    android:layout_marginStart="15dp">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center">
                                        <ImageView
                                            android:id="@+id/img_network_sms"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/sms_networking"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Network SMS"
                                            android:textColor="@color/black"
                                            android:textSize="15sp"
                                            android:layout_centerInParent="true"
                                            android:textAlignment="center"
                                            android:layout_below="@id/img_network_sms"
                                            android:layout_marginHorizontal="2dp"/>
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/btn_bulkwhatsapp"
                                    android:layout_width="105dp"
                                    android:layout_height="130dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardBackgroundColor="@color/purple_200"
                                    android:padding="1dp"
                                    android:layout_marginStart="15dp">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center">

                                        <ImageView
                                            android:id="@+id/img_bulk_msg"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_marginLeft="40dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/whatsapp_bulk" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Bulk whatsapp message"
                                            android:textColor="@color/black"
                                            android:textSize="15sp"
                                            android:layout_centerInParent="true"
                                            android:textAlignment="center"
                                            android:layout_below="@id/img_bulk_msg"
                                            android:layout_marginHorizontal="2dp"/>
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:layout_gravity="center">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/btn_birthday_remainder"
                                    android:layout_width="105dp"
                                    android:layout_height="130dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardBackgroundColor="@color/purple_200"
                                    android:padding="1dp">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center">
                                        <ImageView
                                            android:id="@+id/img_birthday_remainder"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/set_birthday"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Set Bithday Remainder"
                                            android:textColor="@color/black"
                                            android:textSize="15sp"
                                            android:layout_centerInParent="true"
                                            android:textAlignment="center"
                                            android:layout_below="@id/img_birthday_remainder"
                                            android:layout_marginHorizontal="2dp"/>
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/btn_settings"
                                    android:layout_width="105dp"
                                    android:layout_height="130dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardBackgroundColor="@color/purple_200"
                                    android:padding="1dp"
                                    android:layout_marginStart="15dp">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center">
                                        <ImageView
                                            android:id="@+id/img_settings"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/settings"/>
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Settings"
                                            android:textColor="@color/black"
                                            android:textSize="15sp"
                                            android:textAlignment="center"
                                            android:layout_centerInParent="true"
                                            android:layout_below="@id/img_settings"
                                            android:layout_marginHorizontal="2dp"/>
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/btn_permissions"
                                    android:layout_width="105dp"
                                    android:layout_height="130dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardBackgroundColor="@color/purple_200"
                                    android:padding="1dp"
                                    android:layout_marginStart="15dp">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center">
                                        <ImageView
                                            android:id="@+id/img_set_permission"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/permission" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Set Permissions"
                                            android:textColor="@color/black"
                                            android:textSize="15sp"
                                            android:textAlignment="center"
                                            android:layout_centerInParent="true"
                                            android:layout_below="@id/img_set_permission"
                                            android:layout_marginHorizontal="2dp"/>
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/btn_eazypost"
                                    android:layout_width="105dp"
                                    android:layout_height="130dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardBackgroundColor="@color/purple_200"
                                    android:padding="1dp">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center">
                                        <ImageView
                                            android:id="@+id/img_eazypost"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/eazypost" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/img_eazypost"
                                            android:layout_centerInParent="true"
                                            android:text="Eazy Post"
                                            android:textColor="@color/black"
                                            android:textSize="15sp"
                                            android:textAlignment="center"
                                            android:layout_marginHorizontal="2dp"/>
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/btn_downloads"
                                    android:layout_width="105dp"
                                    android:layout_height="130dp"
                                    app:cardCornerRadius="10dp"
                                    android:layout_marginStart="15dp"
                                    app:cardBackgroundColor="@color/purple_200"
                                    android:padding="1dp">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center">

                                        <ImageView
                                            android:id="@+id/img_downloads"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/download" />
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Downloads"
                                            android:textColor="@color/black"
                                            android:textSize="15sp"
                                            android:textAlignment="center"
                                            android:layout_centerInParent="true"
                                            android:layout_below="@id/img_downloads"
                                            android:layout_marginHorizontal="2dp"/>
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/btn_Business"
                                    android:layout_width="105dp"
                                    android:layout_height="130dp"
                                    app:cardCornerRadius="10dp"
                                    android:layout_marginStart="15dp"
                                    app:cardBackgroundColor="@color/purple_200"
                                    android:padding="1dp">
                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center">

                                        <ImageView
                                            android:id="@+id/img_Business"
                                            android:layout_width="60dp"
                                            android:layout_height="60dp"
                                            android:layout_centerInParent="true"
                                            android:src="@drawable/business" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@id/img_Business"
                                            android:layout_centerInParent="true"
                                            android:text="Business"
                                            android:textColor="@color/black"
                                            android:textSize="15sp"
                                            android:textAlignment="center"
                                            android:layout_marginHorizontal="2dp"/>
                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                        </LinearLayout>



                    </LinearLayout>



                </FrameLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>



    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/navigation"
        android:layout_gravity="start"
        app:itemIconPadding="15dp"
        app:itemTextColor="@color/black"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_items">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Technolite Info Solutions"
                android:layout_marginTop="10dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"

                />
            <TextView
                android:id="@+id/txt2"
                android:layout_below="@+id/txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Rights Reserved"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/txt3"
                android:layout_below="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V 1.0.0.1"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>